<h1><strong>MOODIMIZER</strong></h1>

<div class="container">

  <%= form_tag users_new_path, {:class => 'form-signup'} do |f| %>
  	<div class="row"><legend class="col-md-4 col-md-offset-4">Sign Up</legend></div>
      <fieldset>
	    <div class="form-group">
	        <%= label_tag :username, 'Username', class: 'col-md-4 control-label' %>
		    <div class="col-md-5">
		        <%= text_field_tag :username, params[:username], class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <%= label_tag :email, 'Email', class: 'col-md-4 control-label' %>
		    <div class="col-md-5">
		        <%= text_field_tag :email, params[:email], class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <%= label_tag :password, 'Password', class: 'col-md-4 control-label' %>
		    <div class="col-md-5">
		        <%= text_field_tag :password, params[:password], class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <%= label_tag :password_confirmation, 'Password_confirmation', class: 'col-md-4 control-label' %>
		    <div class="col-md-5">
		        <%= text_field_tag :password_confirmation, params[:password_confirmation], class: 'form-control' %>
		    </div>
	    </div>
    </fieldset>
        <div class="button">
          <%= submit_tag 'Create my account', class: 'btn btn-success' %>
          <%= link_to "Login", new_session_path, class: 'btn btn-info' %>
  	    </div>

  <% end %>
