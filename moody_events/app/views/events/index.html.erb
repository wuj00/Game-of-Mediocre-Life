<h1>Events#index</h1>
<br>

<%= form_tag(events_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search events" %>
    <button class="btn" type="submit">Search<i class="icon-search"></i></button>
  </div>
<% end %>

<% @events.each do |event| %>
  <h2><%= link_to event.name, event_path(event) %></h2>
  <hr>
<% end %>


<div class="container">
  <%= link_to 'Add an event', events_new_path, class: 'btn btn-success' %>
  <%= link_to 'Create an account', users_new_path, class: 'btn btn-info' %>
</div>
