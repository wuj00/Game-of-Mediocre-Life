<h1>Events#new</h1>
<p>Find me in app/views/events/new.html.erb</p>

<%= form_for(@user, :html => {:class => 'form-signup'}) do |f| %>
    <h2 class="form-signin-heading">Sign Up</h2>

    <%= f.label :username %>
    <%= f.text_field :username %>
		<br>
    <%= f.label :email %>
    <%= f.text_field :email %>

  <div class="text-centered">
    <%= f.submit "Add event", class: "btn btn-large btn-info" %>
    <%= link_to "Cancel", events_path, class: 'btn btn-primary' %>
	</div>
</div>

<% end %>
